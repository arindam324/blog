---
import Layout from "../layouts/Layout.astro";
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
    </head>
    <body class="bg-[#0a0908] text-white w-full min-h-screen">
        <Layout>
            <form class="max-w-xl flex flex-col mx-auto w-full">
                <label>Full name</label>
                <input
                    class="p-2 rounded-md text-black mt-2"
                    aria-placeholder="full name"
                />
                <label>Email</label>
                <input
                    class="p-2 rounded-md text-black mt-2"
                    aria-placeholder="email"
                />
                <label>Message</label>
                <textarea
                    aria-placeholder="message"
                    class="p-2 rounded-md text-black mt-2"></textarea>
                <button
                    class="p-2 hover:bg-white hover:text-black hover:font-bold bg-black ring-1 ring-white font-semibold rounded-md text-white mt-4"
                >
                    Submit
                </button>
            </form>
        </Layout>
    </body>
</html>
